{
   "compilerOptions": {
	  "target": "ES6",
	  "module": "ES6",
	  "rootDir": "./",
	  "outDir": "./dist",
	  "removeComments": true,
	  "noEmitOnError": true,
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "noUnusedParameters": true,
	  "noUnusedLocals": true,
	  "allowUnreachableCode": false,
	  "strictNullChecks": true
   },
   "include": ["src/ts", "Random"],
   "exclude": ["node_modules", "dist", "Random/tests/*.ts"]
}
