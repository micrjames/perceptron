{
   "compilerOptions": {
	  "target": "ES6",
	  "module": "ES6",
	  "rootDir": "./src/ts",
	  "outDir": "./dist/js",
	  "removeComments": true,
	  "noEmitOnError": true,
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "noUnusedParameters": true,
	  "noUnusedLocals": true,
	  "allowUnreachableCode": false,
	  "strictNullChecks": true
   },
   "include": ["src/ts"]
}
